{{#if addNewCategory}}
  <h1>New Category</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title"}}
        </div>

        <div class="form-group">
          <label for="image">Image</label>
          {{input value=image id="image"}}
        </div>

        <button class="btn"{{action 'saveCategory'}}>Save</button>
      </form>
    </div>
  {{else}}
    <button class="btn"{{action 'categoryFormShow'}}>New Category</button>
{{/if}}
