{{#if updateCategoryForm}}
  <h1>update {{category.title}}</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title" placeholder=category.title}}
        </div>

        <div class="form-group">
          <label for="image">Image</label>
          {{input value=image id="image" placeholder=category.image}}
        </div>

        <button class="btn"{{action 'updateCategory'}}>Save</button>
      </form>
    </div>
  {{else}}
    <button class="btn"{{action 'updateCategoryForm'}}>Update Category</button>
{{/if}}
